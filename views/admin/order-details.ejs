<%- include('../partials/header') %>

<div class="container mt-4">
  <h2>Order Details</h2>

  <hr>
  <h5>Customer Information</h5>
  <p><strong>Name:</strong> <%= order.customerDetails.name %></p>
  <p><strong>Email:</strong> <%= order.customerDetails.email %></p>
  <p><strong>Phone:</strong> <%= order.customerDetails.phone %></p>
  <p><strong>Address:</strong> <%= order.customerDetails.address %></p>

  <hr>
  <h5>Order Summary</h5>
  <ul>
    <% order.items.forEach(i => { %>
      <li><%= i.productId?.name %> - <%= i.quantity %> x $<%= i.productId?.price %></li>
    <% }) %>
  </ul>

  <p><strong>Total:</strong> $<%= order.totalAmount.toFixed(2) %></p>
  <p><strong>Status:</strong> <%= order.status %></p>
  <p><strong>Order Date:</strong> <%= new Date(order.createdAt).toLocaleString() %></p>

  <a href="/orders/admin/orders" class="btn btn-secondary mt-3">Back to Orders</a>
</div>

<%- include('../partials/footer') %>
