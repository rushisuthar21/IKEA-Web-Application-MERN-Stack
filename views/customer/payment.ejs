<%- include('../partials/header') %>

<div class="container mt-4" style="max-width: 500px;">
  <h2 class="mb-4">Payment</h2>

  <!-- ðŸ›‘ Error alert if backend sends error -->
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="/orders/payment" method="POST" id="paymentForm" novalidate>
    <div class="mb-3">
      <label>Card Number</label>
      <input
        type="text"
        name="cardNumber"
        class="form-control"
        required
        pattern="\d{16}"
        inputmode="numeric"
        maxlength="16"
        placeholder="1234 5678 9012 3456"
        title="Enter a 16-digit card number"
      >
    </div>

    <div class="mb-3">
      <label>Expiry Date (MM/YY)</label>
      <input
        type="text"
        name="expiry"
        class="form-control"
        required
        pattern="^(0[1-9]|1[0-2])\/\d{2}$"
        placeholder="MM/YY"
        title="Enter expiry in MM/YY format (01-12 for month)"
      >
    </div>

    <div class="mb-3">
      <label>CVV</label>
      <input
        type="password"
        name="cvv"
        class="form-control"
        required
        pattern="\d{3}"
        maxlength="3"
        inputmode="numeric"
        placeholder="123"
        title="3-digit CVV"
      >
    </div>

    <button class="btn btn-success w-100">Pay Now</button>
  </form>
</div>

<script src="/js/validation.js"></script>
<script>
  // â›” Prevent invalid expiry format or past date
  document.getElementById('paymentForm').addEventListener('submit', function (e) {
    const expiryInput = document.querySelector('input[name="expiry"]');
    const expiry = expiryInput.value.trim();
    const [month, year] = expiry.split('/');

    const now = new Date();
    const currentMonth = now.getMonth() + 1;
    const currentYear = now.getFullYear() % 100;

    if (!month || !year || isNaN(month) || isNaN(year)) {
      alert('Please enter a valid expiry in MM/YY format.');
      e.preventDefault();
      return;
    }

    const mm = parseInt(month);
    const yy = parseInt(year);

    if (mm < 1 || mm > 12 || (yy < currentYear || (yy === currentYear && mm < currentMonth))) {
      alert('Please enter a valid future expiry date.');
      e.preventDefault();
    }
  });
</script>

